# Set the colors for the i3bar.
set_from_resource $focused-border i3wm.color2 #f0f0f0
set_from_resource $focused-bg i3wm.color2 #f0f0f0
set_from_resource $focused-font i3wm.color7 #ffffff

set_from_resource $active-border i3wm.color2 #f0f0f0
set_from_resource $active-bg i3wm.color2 #f0f0f0
set_from_resource $active-font i3wm.color7 #ffffff

set_from_resource $inactive-border i3wm.color2 #f0f0f0
set_from_resource $inactive-bg i3wm.color2 #f0f0f0
set_from_resource $inactive-font i3wm.color7 #ffffff

set_from_resource $urgent-border i3wm.color6 #f0f0f0
set_from_resource $urgent-bg i3wm.color6 #f0f0f0
set_from_resource $urgent-font i3wm.color0 #ffffff

set_from_resource $font-color i3wm.color7 #ffffff

bar {

  status_command i3blocks
  font pango:JetBrains Mono Regular Nerd Font Complete Mono 11

  colors {
        statusline $focused-font
        # Background color of the bar. 
        background $grey
        # Workspaces
        focused_workspace $focused-border $focused-bg $focused-font    
        inactive_workspace $grey $grey $font-color
        urgent_workspace $urgent $urgent $grey
  }
}


