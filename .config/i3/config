bindsym $mod+n exec kitty nvim ~/notes/notes.txt
bindsym $mod+g exec kitty nvim ~/notes/budget.txt

# Brightness control
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10 

# Volume control
bindsym XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +10000
bindsym XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -10000
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec amixer set Capture toggle

# Redshift Control
bindsym $mod+XF86MonBrightnessUp exec redshift -P -O 5500
bindsym $mod+XF86MonBrightnessDown exec redshift -P -O 4500 

# Screenshot
bindsym Print exec maim ~/screenshots/$(date '+%Y-%m-%d-%T')-screenshot.png
bindsym $mod+p exec maim -s -u | xclip -selection clipboard -t image/png -i

# Other bindings
bindsym XF86Calculator exec kitty calc

